{
  "name": "Starter Starter",
  "version": "1.1.0",
  "description": "A clean, minimalist blog theme focused on readability and simplicity",
  "author": "RustPress",
  "license": "MIT",
  "homepage": "https://rustpress.dev/themes/starter-starter",
  "screenshot": "screenshot.png",
  "tags": [
    "minimal",
    "clean",
    "blog",
    "simple",
    "starter",
    "lightweight"
  ],
  "supports": {
    "darkMode": true,
    "customColors": true,
    "customFonts": true,
    "widgets": true,
    "menus": [
      "primary",
      "footer"
    ],
    "customHeader": true,
    "customFooter": true,
    "comments": true,
    "search": true,
    "rss": true
  },
  "colors": {
    "primary": "#000000",
    "secondary": "#666666",
    "accent": "#0066CC",
    "background": "#FFFFFF",
    "surface": "#F8F9FA",
    "text": "#1A1A1A",
    "textSecondary": "#666666",
    "border": "#E5E5E5"
  },
  "darkColors": {
    "primary": "#FFFFFF",
    "secondary": "#AAAAAA",
    "accent": "#66B3FF",
    "background": "#0D0D0D",
    "surface": "#1A1A1A",
    "text": "#F5F5F5",
    "textSecondary": "#AAAAAA",
    "border": "#333333"
  },
  "fonts": {
    "heading": {
      "family": "Georgia, 'Times New Roman', serif",
      "weight": "700"
    },
    "body": {
      "family": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "weight": "400"
    },
    "mono": {
      "family": "'SF Mono', 'Fira Code', monospace",
      "weight": "400"
    }
  },
  "layout": {
    "containerWidth": "720px",
    "containerWidthWide": "1100px",
    "sidebarWidth": "280px",
    "headerHeight": "64px"
  },
  "spacing": {
    "unit": "8px",
    "scale": [
      0,
      1,
      2,
      3,
      4,
      6,
      8,
      12,
      16,
      24,
      32
    ]
  },
  "features": {
    "stickyHeader": false,
    "backToTop": true,
    "readingProgress": true,
    "estimatedReadTime": true,
    "socialShare": true,
    "relatedPosts": true,
    "authorBox": true,
    "tableOfContents": false,
    "codeHighlight": true,
    "lazyImages": true
  },
  "menus": {
    "primary": {
      "location": "header",
      "depth": 1
    },
    "footer": {
      "location": "footer",
      "depth": 1
    }
  },
  "widgets": {
    "sidebar": [
      "about",
      "recent-posts",
      "categories",
      "newsletter"
    ],
    "footer": [
      "about",
      "links",
      "social"
    ]
  },
  "templates": {
    "home": "home.html",
    "post": "single.html",
    "page": "page.html",
    "archive": "archive.html",
    "search": "search.html",
    "author": "author.html",
    "404": "404.html"
  },
  "customizer": {
    "sections": {
      "identity": {
        "title": "Site Identity",
        "settings": [
          "logo",
          "siteName",
          "tagline",
          "favicon"
        ]
      },
      "colors": {
        "title": "Colors",
        "settings": [
          "primaryColor",
          "accentColor",
          "backgroundColor"
        ]
      },
      "typography": {
        "title": "Typography",
        "settings": [
          "headingFont",
          "bodyFont",
          "fontSize"
        ]
      },
      "header": {
        "title": "Header",
        "settings": [
          "showTagline",
          "showSearch"
        ]
      },
      "footer": {
        "title": "Footer",
        "settings": [
          "copyrightText",
          "showSocial"
        ]
      }
    }
  }
}